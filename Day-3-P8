Find K Largest Elements

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    int a[n],temp,x;
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
     scanf("%d",&x);
    for(int i=0;i<n;i++)
    { for(int j=i+1;j<n;j++){
        if(a[i]>a[j]){
           temp=a[i];
            a[i]=a[j];
            a[j]=temp;
        }
    }
        
    }
    printf("The elements are in the order: ");
    for(int i=0;i<n;i++){
       printf("%d ",a[i]);
   }
    
    printf("\nThe Kth value is %d and Largest elements are ",x);
   for(int i=n-1;i>=n-x;i--){
       printf("%d ",a[i]);
   }
    
    
    return 0;
}
