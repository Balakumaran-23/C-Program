Abundant number

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   int a,x=0;
    scanf("%d",&a);
    for(int i=1;i<a;i++){
        if(a%i==0){
            x+=i;
        }
    }
    if(x>a){
        printf("Abundant Number");
    }
    else
        printf("Not Abundant Number");
    return 0;
}
