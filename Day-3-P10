Second Array Max And Min

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int n;
    scanf("%d", &n);
    int a[n];
    int even[100], odd[100]; 
    int ec = 0, oc = 0;

   
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        if (i % 2 == 0) {
            even[ec++] = a[i];
        } else {
            odd[oc++] = a[i];
        }
    }

    int max1 = -100000, max2 = -100000;
    for (int i = 0; i < ec; i++) {
        if (even[i] > max1) {
            max2 = max1;
            max1 = even[i];
        } else if (even[i] > max2) {
            max2 = even[i];
        }
    }

    int min1 = 100000, min2 = 100000;
    for (int i = 0; i < oc; i++) {
        if (odd[i] < min1) {
            min2 = min1;
            min1 = odd[i];
        } else if (odd[i] < min2) {
            min2 = odd[i];
        }
    }
    int secondLargestEven = (ec >= 2) ? max2 : max1;
    int secondSmallestOdd = (oc >= 2) ? min2 : min1;

    int sum = secondLargestEven + secondSmallestOdd;
    printf("Sum=%d", sum);

    return 0;
}
