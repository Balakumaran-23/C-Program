2D Prime Matrix

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    int a[n][n],cnt=0;
    if(n<8){
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            scanf("%d",&a[i][j]);
        }
    }
    printf("The Prime Array Matrix is:\n");
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            for(int k=1;k<=a[i][j];k++){
                if(a[i][j]%k==0)
                    cnt++;
            }
            if(cnt>=2&&cnt<3){
                a[i][j]='T';
                printf("%c ",a[i][j]);
            }
            else{
                a[i][j]='F';
                printf("%c ",a[i][j]);
            }
            cnt=0;
        }
        printf("\n");
    }
    }
    else
        printf("Enter the valid Input");
    return 0;
}
