Numbers Greater Than Target Value


#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    int a[n],temp,k=0,cnt=0;
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int x;
    scanf("%d",&x);
    
    for(int i=0;i<n;i++)
    { 
      for(int j=0;j<n;j++)  {
            if(a[i]<a[j])
            {
                temp=a[i];
                a[i]=a[j];
                a[j]=temp;
            }
        }
    }
    printf("The Target values are ");
    for(int i=0;i<n;i++)
    {
        if(a[i]>x){
            printf("%d ",a[i]);
        k=k+a[i];
            cnt++;
            }
    }
    printf("\nsum of value is %d",k);
    printf("\nAverage of the value is %.1f",(float)k/cnt);
    return 0;
}
